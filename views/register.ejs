<!DOCTYPE html>
<html lang="pt-Br">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>


  <body class="register">
    <%- include('./partials/header.ejs') %>

    <main>
      <section id="Register">
        <% if(message !="") {%> 
          <%= include('./partials/alerts.ejs') %> 
          <% } %>

        <h2 id="register">Register a new currency</h2>

        <form action="/add" method="POST" class="form">
          <label for="nome"> Name: </label>
          <input type="text" id="nome" name="nome" required />

          <label for="denomination"> Denomination: </label>
          <input type="text" id="denomination" name="denomination" required />

          <label for="topic"> Topic: </label>
          <input type="text" id="topic" name="topic" required />

          <label for="period_"> Period: </label>
          <input type="text" id="period_" name="period_" required />

          <label for="years"> Year: </label>
          <input type="number" id="years" name="years" required />

          <label for="composition"> Composition: </label>
          <input type="text" id="composition" name="composition" required />

          <label for="typeboard"> Type of Board: </label>
          <input type="text" id="typeboard" name="typeboard" required />

          <label for="picture_front">front image link</label>
          <input tipe="text" id="picture_front" name="picture_front" required />

          <label for="picture_back">behind image link</label>
          <input type="text" id="picture_back" name="picture_back" required />

          <button id="btnadd" type="submit">Register</button>
        </form>
      </section>
    </main>

    <%- include('./partials/footer.ejs') %>

    <script src="/public/script.js"></script>
  </body>
</html>
